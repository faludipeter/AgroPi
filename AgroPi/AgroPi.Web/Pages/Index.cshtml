@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
@using Microsoft.AspNetCore.Identity
@using AgroPi.Dal.Entities
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<div class="form-signin">
    <h1>@ViewData["Title"]</h1>
    <h5>AgroPi Raspberry pi 3B+</h5>
    <h5>Current user: @UserManager.GetUserName(User)</h5>
    <div class="form-group">
        <a href="/Identity/Account/Manage" class="btn btn-lg btn-primary btn-block"> <i class="material-icons">perm_identity</i>Manage Account</a>
    </div>
    <div class="form-group">
        <a href="/Sensors" class="btn btn-lg btn-primary btn-block"><i class="material-icons">wifi_tethering</i>Sensore Data</a>
    </div>
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post" id="logoutForm">
        <div class="form-group">
            <button type="submit" class="btn btn-lg btn-primary btn-block"><i class="material-icons">exit_to_app</i>Log out</button>
        </div>
    </form>

    <p class="mt-5 mb-3 text-muted">&copy; Faludi Péter 2019</p>


</div>
